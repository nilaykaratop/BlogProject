        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ImageURL)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Base64)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Active)
